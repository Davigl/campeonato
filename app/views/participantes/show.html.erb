<div class="container">
  <h2>Informações</h2>
    <table class="stripped">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Matricula</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
      <tr>
        <td><%= @participante.nome %></td>
        <td><%= @participante.matricula %></td>
        <% if (@participante.status == true) %>
              <td><i class="material-icons">check</i></td>
        <% else %>
              <td><i class="material-icons">clear</i></td>
        <% end %>
      </tr>
      </tbody>
    </table>
<%= link_to 'Edit', edit_participante_path(@participante) %> |
<%= link_to 'Back', participantes_path %>
</div>
