<div class="container">
<h1 style="color: dimgrey; text-align: center;">Participantes</h1>
<table class="centered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Matricula</th>
      <th>Confirmado</th>
      <th>Equipe</th>
      <th>Icone</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <br>
  <tbody>
    <% @participantes.each do |participante| %>
      <tr>
        <td><%= participante.nome %></td>
        <td><%= participante.matricula %></td>
        <% if (participante.status == true) %>
              <td><i class="material-icons">check</i></td>
        <% else %>
              <td><i class="material-icons">clear</i></td>
        <% end %>
        <td><%= participante.grupo.nome %> </td>
        <td><%= image_tag(participante.grupo.image, class: 'circle icon_grupo') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>

<%= link_to_next_page @participantes, 'Próxima página', class: 'btn #424242 grey darken-3' %>
<%= link_to_prev_page @participantes, 'Página anterior', class: 'btn #424242 grey darken-3' %>
<br>
<br>

</div>

